<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AdminDashboard">

    <GridLayout
        android:id="@+id/buttonsGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="1"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteCustomers"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:text="Delete All Customers"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddAdmin"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:text="Add Admin"
            android:background="@drawable/button_background"
            android:textColor="@color/white"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnViewReservations"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:text="View All Reservations"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:text="Logout"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            />
    </GridLayout>

    <ImageView
        android:id="@+id/adminBackgroundImage"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:src="@drawable/admin_bg"
        app:layout_constraintTop_toBottomOf="@id/buttonsGridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
