<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.main.project.UI.HomeFragment">

    <!-- activity_history.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/baseline_info_24"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCallDealer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Call Car Dealer"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/baseline_call_24"
            android:paddingLeft="10dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOpenMaps"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Locate Dealer on Maps"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/baseline_my_location_24"
            android:paddingLeft="10dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonOpenGmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Email Car Dealer"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:paddingLeft="10dp"
            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>